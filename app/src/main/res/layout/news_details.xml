<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsDetails">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:navigationIcon="@drawable/baseline_keyboard_arrow_left_24"
        app:title="..."
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="240dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您对该文章的态度是:"></TextView>
        <ImageButton
            android:id="@+id/like"
            android:layout_marginLeft="380dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/nolike"></ImageButton>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/talk"></ImageView>
        <EditText
            android:id="@+id/comment"
            android:layout_marginRight="95dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:background="#D3D3D3"
            android:layout_height="wrap_content"></EditText>

        <Button
            android:id="@+id/yes"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="330dp"
            android:textSize="15dp"
            android:layout_width="78dp"
            android:layout_height="45dp"
            android:text="发送"></Button>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论区"
        android:layout_marginLeft="180dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>
    <TextView
        android:id="@+id/showcomment"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"></TextView>
    </LinearLayout>
</ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>